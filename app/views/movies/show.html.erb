<% movie = IMDB.all.first %>

<h1 class="title">
  <%= movie[:title] %>
  (<%= movie[:year] %>)
</h1>

<div class="row">
  <div class="col-md-3 text-center">
    <p><%= image_tag movie[:image_url] %></p>
  </div>
  <div class="col-md-4 summary">
    <h2>Plot</h2>
    <p>
      <%= movie[:plot] %>
    </p>
  </div>
</div>
